<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="vertical"
    tools:context="com.example.dani.calculator.MainActivity">

    <EditText
        android:id="@+id/etResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:height="40pt"
        android:background="#888"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="textPersonName"
        android:paddingBottom="5pt"
        android:paddingRight="5pt"
        android:paddingTop="20pt"
        android:text="432"
        android:textAlignment="viewEnd"
        android:textColor="@android:color/white"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="c"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buPlMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="+/-"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buOpEvent"
            android:text="x^y"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#ff8f00 "
            android:onClick="buOpEvent"
            android:text="/"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#ff8f00 "
            android:onClick="buOpEvent"
            android:text="X"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#ff8f00 "
            android:onClick="buOpEvent"
            android:text="-"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bu3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:height="70dp"
            android:background="#ff8f00 "
            android:onClick="buOpEvent"
            android:text="+"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1.335"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="2"
            android:height="70dp"
            android:background="#eee"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buEq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="2"
            android:height="70dp"
            android:background="#ff8f00 "
            android:onClick="buEqEvent"
            android:text="="
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
